interface Manual {
  id: number;
  title: string;
  content: any;
  status: ManualStatus;
  video_file_path?: string;
  audio_file_path?: string;
  project_id: number;
  version?: string;
  created_at?: string;
  updated_at?: string;
}

interface Project {
  id: number;
